---
import Grain from '@components/Grain.astro';

interface Props {
  skill: ((_props: astroHTML.JSX.SVGAttributes) => any) & ImageMetadata;
  index: number;
}

const { skill: SkillIcon, index } = Astro.props;
---

<li
  class="p-px overflow-hidden aspect-square w-(--itemWidth) rounded-md bg-gradient-to-tr from-zinc-800 via-zinc-500 to-zinc-800 col-[resting] row-start-1 animate-marquee-move motion-reduce:[--addItem:1]"
>
  <Grain />
  <div class="p-[15%] bg-zinc-800 rounded-md">
    <SkillIcon fill="var(--color-neutral-200)" />
  </div>
</li>

<style
  define:vars={{
    marqueeIndex: `${index + 1}`,
    delay: `calc(var(--speed) / calc(var(--marqueeItems) + var(--addItem, 0)) * var(--marqueeIndex) * -1)`,
  }}
></style>
