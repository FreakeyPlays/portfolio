---
interface Props {
  href: string;
  target?: '_self' | '_blank' | '_parent' | '_top';
  rel?: string;
  class?: string;
  [key: string]: any;
}

const { href, target = '_self', rel = '', class: className = '', ...rest } = Astro.props;
---

<a
  class:list={[
    'bg-gradient-to-br from-lime-400 to-green-600 bg-clip-text text-transparent relative',
    'after:content-[""] after:absolute after:-bottom-0.5 after:left-0 after:w-full after:h-[0.1rem] after:bg-gradient-to-br after:from-lime-400 after:to-green-600 after:transition-all after:scale-0 after:origin-center hover:after:scale-100',
    className,
  ]}
  href={href}
  target={target}
  rel={rel}
  {...rest}
>
  <slot />
</a>
