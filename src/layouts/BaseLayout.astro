---
import Filter from '@components/Filter.astro';
import BaseHead, { type Props as HeadProps } from '@components/meta/BaseHead.astro';
import '@styles/global.css';

interface Props extends HeadProps {
  class?: string;
  bgClass?: string;
}

const { bgClass, ...head } = Astro.props;
---

<!doctype html>
<html
  lang="en"
  class:list={['overflow-x-hidden break-words scroll-smooth [word-break:break-word]', bgClass, Astro.props.class]}
>
  <head>
    <BaseHead {...head} />
  </head>
  <body
    class="antialiased bg-stone-950 prose-stone prose-invert text-neutral-200 selection:bg-lime-700/80 relative grid grid-rows-[1fr_auto] min-h-screen max-w-screen"
  >
    <Filter />

    <main
      id="main"
      class="z-10 grid grid-cols-(--grid-template-mobile) md:grid-cols-(--grid-template-tablet) xl:grid-cols-(--grid-template-desktop) *:col-[content] *:my-4"
    >
      <slot />
    </main>

    <div id="footer" class="inset-x-0 bottom-0 z-20 max-h-screen"></div>
  </body>
</html>
